{
  "name": "@padcom/wait-for",
  "version": "0.0.0",
  "description": "Wait for something to be truthy (with timeout)",
  "author": "Matthias Hryniszak <padcom@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/padcom/wait-for#readme",
  "bugs": {
    "url": "https://github.com/padcom/wait-for/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/padcom/wait-for.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "require": "./dist/index.umd.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "start": "npm run dev",
    "test": "vitest run --root . --coverage",
    "test:watch": "vitest watch --root . --coverage",
    "lint": "eslint './src/**/*.{ts,vue}'",
    "dev": "vite build -w",
    "build": "vite build",
    "clean": "rimraf dist",
    "prepublishOnly": "npm install && npm run clean && npm run build && npm test"
  },
  "devDependencies": {
    "@padcom/eslint-config-javascript": "0.20.1",
    "@padcom/eslint-config-typescript": "0.20.1",
    "@padcom/tsconfig": "0.0.3",
    "@padcom/vite-config-lib": "0.11.0",
    "@types/events": "3.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.35.0",
    "rimraf": "6.0.1",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vitest": "3.2.4"
  }
}
